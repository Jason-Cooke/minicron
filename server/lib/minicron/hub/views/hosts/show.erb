<header class="clearfix">
  <h2 class="pull-left">Host '<%= @host.name %>'</h2>
  <a href="<%= "#{route_prefix}/host/#{@host.id}/delete" %>" class="pull-right btn btn-danger btn-sm">Delete</a>
  <a href="<%= "#{route_prefix}/host/#{@host.id}/edit" %>" class="pull-right btn btn-warning btn-sm">Edit</a>
</header>
<hr/>

<form class="form-horizontal" role="form">
  <div class="form-group">
    <label class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      <div class="form-control form-control-view"><%= @host.name %></div>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Hostname</label>
    <div class="col-sm-10">
      <div class="form-control form-control-view"><%= @host.hostname %></div>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Created At</label>
    <div class="col-sm-10">
      <div class="form-control form-control-view"><%= Minicron.time(@host.created_at) %></div>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Updated At</label>
    <div class="col-sm-10">
      <div class="form-control form-control-view"><%= Minicron.time(@host.updated_at) %></div>
    </div>
  </div>
</form>

<header class="clearfix">
  <h2 class="pull-left">Recent Executions</h2>
</header>
<hr/>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Job</th>
      <th>Number</th>
      <th>Started At</th>
      <th>Finished At</th>
      <th>Exit Status</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @host_executions.each do |execution| %>
      <tr>
        <td><a href="<%= "#{route_prefix}/job/#{execution.job.id}" %>"><%= execution.job.name %></a></td>
        <td><a href="<%= "#{route_prefix}/execution/#{execution.id}" %>"><%= execution.number %></a></td>
        <td><%= Minicron.time(execution.started_at) %></td>
        <td><%= Minicron.time(execution.finished_at) %></td>
        <td><%= execution.exit_status %></td>
        <td><a href="<%= "#{route_prefix}/execution/#{execution.id}" %>" class="btn btn-info btn-xs">View</a></td>
      </tr>
    <% end %>
  </tbody>
</table>
